const page = () => {
  const container = useRef(null);
  const { scrollYProgress } = useScroll({
    target: container,
    offset: ["start start", "end end"],
  });

  //useEffect(() => {
  //  scrollYProgress.on("change", (value) => console.log(value));
  //});
  
//this is code is responsable for smooth animation. 
  useEffect(() => {
    // Initialize Lenis
    const lenis = new Lenis();

    // Listen for the scroll event and log the event data
    lenis.on("scroll", (e: any) => {
      console.log(e);
    });

    // Use requestAnimationFrame to continuously update the scroll
    function raf(time: any) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }

    requestAnimationFrame(raf);
  }, []);

  return (
    <main ref={container} className="mt-[50vh] mb-[50vh] relative -top-12">
      {projects.map((project, index) => {
        const targetScale = 1 - (projects.length - index) * 0.05;

        return (
          <Card
            key={index}
            {...project}
            i={index}
            range={[index * 0.25, 1]}
            targetScale={targetScale}
            progress={scrollYProgress}
          />
        );
      })}
    </main>
  );
};

export default page;

const Card = ({
  title,
  description,
  src,
  link,
  color,
  i,
  progress,
  range,
  targetScale,
}: any) => {
  const container = useRef(null);
  const { scrollYProgress } = useScroll({
    target: container,
    offset: ["start end", "start start"],
  });

  const imageScale = useTransform(scrollYProgress, [0, 1], [3, 1]); // smooth zoom-in effect
  const scale = useTransform(progress, range, [1, targetScale]);

  return (
    <div
      ref={container}
      className="min-h-screen flex items-center justify-center sticky top-0"
    >
      <motion.div
        style={{ backgroundColor: color, marginTop: i * 45, scale: scale }}
        className="relative w-[80vw] h-[70vh] flex flex-col items-center justify-center p-10 gap-10 rounded-3xl shadow-2xl"
      >
        <h1 className="text-center text-2xl font-bold mt-10">{title}</h1>

        <div className="flex justify-between items-start gap-10 w-full h-full p-10">
          <div className="flex flex-col justify-center items-start w-[40%] h-full">
            <p className="text-left">{description}</p>
            <a
              href={link}
              target="_blank"
              className="text-center text-lg font-bold flex justify-start items-center gap-2"
            >
              Read More <img src="arrow.svg" alt="arrow" />
            </a>
          </div>

          {/* ✅ Fixed scaling */}
          <div className="relative w-[60%] h-full rounded-[25px] overflow-hidden">
            <motion.img
              src={src}
              alt={title}
              style={{ scale: imageScale }}
              className="w-full h-full object-cover rounded-[25px]"
            />
          </div>
        </div>
      </motion.div>
    </div>
  );
};
